<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_giohang_check"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_h512"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/item_giohang_tensp"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:text="15000đ"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
               <LinearLayout
                   android:layout_weight="4"
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginStart="15dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:src="@drawable/ic_remove"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/item_giohang_tru"
                       android:layout_weight="1"
                       android:layout_marginEnd="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/item_giohang_soluong"
                       android:text="1"
                       android:gravity="center"
                       android:layout_weight="2"
                       android:textSize="15sp"
                       android:layout_marginEnd="10dp"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <ImageView
                       android:src="@drawable/ic_add"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/item_giohang_cong"
                       android:layout_weight="1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
                <TextView
                    android:id="@+id/item_giohang_gia2"
                    android:text="25000đ"
                    android:gravity="center|center_vertical"
                    android:layout_weight="7"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>